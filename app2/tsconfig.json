{
  "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "typeRoots": [
        "node_modules/@types",
        "typings"
      ],
      "lib": [
        "ES5",
        "ES2015.Promise",
        "ES2015.Generator",
        "DOM"
      ]
  },
  "include": [
      "./src/**/*",
      "./typings/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}